<% show_post ||= false %>
<div class="span1 well text-center">
  <% if logged_in? %>
      <%= link_to vote_post_comment_path(comment.post, comment, vote: true), method: :post, remote: true do %>
          <i class="icon-arrow-up"></i>
      <% end %>
      <br />
  <% end %>
  <span id="vote_<%= comment.id %>"><%= comment.total_votes %></span>
  <% if logged_in? %>
      <br />
      <%= link_to vote_post_comment_path(comment.post, comment, vote: false), method: :post, remote: true do %>
          <i class="icon-arrow-down"></i>
      <% end %>
  <% end %>
</div>
<div class="well span8">
  <em>"<%= comment.body %>"</em>
  <% if show_post %>
    On <%= link_to comment.post.title, post_path(comment.post) %>
  <% end %>
  <p>
    <span class="quiet">commented by</span> <%= link_to comment.creator.username, user_path(comment.creator) %>
    <small>at <%= comment.created_at %></small>
  </p>
</div>